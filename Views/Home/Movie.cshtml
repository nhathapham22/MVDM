@model COMP235MVCDemo.Models.Movie
@{
    ViewBag.Title = "Movie";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Movie</h2>
@* styling for the table content *@
<style>
    table {
        border-collapse: collapse;
        width: 100%;
    }

    th, td {
        padding: 8px;
        text-align: left;
        border-bottom: 1px solid #ddd;
    }

    th {
        background-color: #f2f2f2;
    }

    .btn-link {
        background-color: transparent;
        border: none;
        color: #007bff;
        text-decoration: underline;
        cursor: pointer;
    }
</style>


@* table content *@
@using (Html.BeginForm("Movie", "Home", FormMethod.Post))
{   
    // show below content if not in edit mode
    if (!Model.IsEditable)
    {
        <table>
                <tr>
                    <td>Id</td>
                    <td>@Model.Id</td> 
                </tr>
        
                <tr>
                    <td>Title</td>
                    <td>@Model.Title</td>
             
                </tr>
          
                <tr>
                    <td>Director</td>
                    <td>@Model.Director</td>
             
                </tr>
            
                <tr>
                    <td>Description</td>
                    <td>@Model.Description</td>
             
                </tr>
            
                <tr>
                    <td>
                        @Html.ActionLink("Edit", "MovieEdit", Model)
                    </td>
                    <td>
                        @Html.ActionLink("Delete", "MovieDelete", Model)
                    </td>
                </tr>
        </table>


    }

    //show below content if in edit mode
    else
    {
        <table>
            <tr>@Html.HiddenFor(m => m.Id)</tr>
    
            <tr><td>Title</td> 
                <td>
                    @Html.TextBoxFor(m => m.Title)
                    </td>
            </tr>
    
            <tr><td>Director</td>
                <td>
                    @Html.TextBoxFor(m => m.Director)
                </td>
            </tr>
    
            <tr><td>Description</td>
                <td>
                    @Html.TextBoxFor(m => m.Description)
                    </td>
            </tr>
    
            <tr>
                <td> <input type="submit" value="Save" name="Save" class="btn btn-link" /></td>
                <td> <input type="submit" value="Cancel" name="Cancel" class="btn btn-link" /></td>
            </tr>
        </table>

    }

}

